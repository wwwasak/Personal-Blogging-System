<head>
    <link rel="stylesheet" href="css/register.css">
</head>

<form action="./userRegister" method="post" class="register">
    <p>Register</p>
    <input type="text" id="account" name="account" placeholder="Account">
    <input type="text" id="realname" name="realname" placeholder="Please enter your real name.">
    <input type="password" id="password" name="password" placeholder="Password">
    <input type="password" id="repassword" name="repassword" placeholder="Re-enter Password">
    <input type="date" id="birthday" name="birthday">
    <fieldset class="radiocontainer">
        <legend>Select a photo for your profile:</legend>

        
            <input type="radio" class="radioType" id="user1" name="userImage" value="user1" checked />
            <label for="user1"><img src="/images/userimages/user1.png" width="75px" height="110px"></label>
      
            <input type="radio" class="radioType" id="user2" name="userImage" value="user2" />
            <label for="user2"><img src="/images/userimages/user2.png" width="75px" height="110px"></label>
      
  
            <input type="radio" class="radioType" id="user3" name="userImage" value="user3" />
            <label for="user3"><img src="/images/userimages/user3.png" width="75px" height="110px"></label><br>
        
            <input type="radio" class="radioType" id="user4" name="userImage" value="user4" />
            <label for="user4"><img src="/images/userimages/user4.png" width="75px" height="110px"></label>
     
            <input type="radio" class="radioType" id="user5" name="userImage" value="user5" />
            <label for="user5"><img src="/images/userimages/user5.png" width="75px" height="110px"></label>
       
            <input type="radio" class="radioType" id="user6" name="userImage" value="user6" />
            <label for="user6"><img src="/images/userimages/user6.png" width="75px" height="110px"></label>
      
    </fieldset>

    <textarea class="textarea" id="description" name="description" rows="4" cols="60" placeholder="Please introduce yourself"></textarea>
    <input type="submit" class="btn" value="SUBMIT">
</form>