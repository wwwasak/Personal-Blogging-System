<head>
  <link rel="stylesheet" href="/css/adminPage.css" type='text/css'>

</head>


<div class="container">
    <div class="categories-section">
    <h1>This is admin page.</h1>
    <br>
    <h2>Current Categories</h2>
    <ul>
        {{#each category}}  
        <li>
            <ul>
                <li>Name: {{this.name}}</li>
                <li>Description: {{this.description}}</li>
                <li>
                    <form id="deleteCategory" method="get" action="/deletecategory">
                        <input type="hidden" name="id" id="name" value={{this.id}}>
                        <button type="submit">Delete</button>
                    </form>
                </li>
                <li>
                    <form id="changeCategory" method="get" action="/updatecategory">
                        <fieldset>
                            <legend>Update {{this.name}}</legend>
                            <p>
                                <label for="changeName" class="changename">New Name</label><br />
                                <input type="text" size="30" name="updatename" id="name" value="{{this.name}}"/>
                            </p>
                            <p>
                                <label for="changeDescription" class="changedes">New Description</label><br />
                                <input type="text" size="100" name="updatedescription" id="description" value="{{this.description}}"/>
                            </p>
                        </fieldset>
                        <input type="hidden" name="id" id="name" value={{this.id}}>
                        <button type="submit">Update</button>
                    </form>
                </li>
            </ul>   
        </li>
        {{/each}}
    </ul>
    </div>
    <div class="add-category-section">
    <form id="addCategory" method="get" action="/addcategory">
        <fieldset>
            <legend>Add Category</legend>
            <p>
                <label for="addName" class="addname">Name</label><br />
                <input type="text" size="30" name="name" id="name"/>
            </p>
            <p>
                <label for="addDescription" class="adddes">Description</label><br />
                <input type="text" size="100" name="description" id="description"/>
            </p>
        </fieldset>
        <button type="submit">add category</button>
        <input type="reset" name="reset_button" id="reset_id" value="Clear" />
    </form>
    <hr>
    </div>

    <div class="articles-section">
        <h1>Current Articles</h1>
        <ul>
            {{#each article}}
            <h2>Title: <a href="article/{{this.id}}">{{this.title}}</a></h2>
            <li>
                <ul>
                    <li>Category: {{this.category.name}}</li>
                    <li>Author: <a href = "/othersProfile/{{this.authorid}}">{{this.author}}</a></li>
                    <li>Post date and time: {{this.dateTime}}</li>
                    <li>
                        <form id="deleteArticle" method="get" action="/deletearticle">
                        <input type="hidden" name="id" id="name" value={{this.id}}>
                        <button type="submit">Delete</button>
                    </form>
                    </li>
                </ul>
            </li>
            {{/each}}
        </ul>

    </div>

    <div class="users-section">
        <h1>Current Users</h1>
        <ul>
            {{#each user}}
            <h2>Name: <a href = "/othersProfile/{{this.id}}">{{this.account}}</a></h2>
            <li>
                <ul>
                    <li>Birthday: {{this.birthday}}</li>
                    <li>description: {{this.description}}</li>
                    <li>
                        <form id="deleteUser" method="get" action="/userDelete">
                        <input type="hidden" name="userid" id="name" value={{this.id}}>
                        <button type="submit">Delete</button>
                    </form>
                    </li>
                </ul>
            </li>
            {{/each}}
        </ul>

    </div>
</div>